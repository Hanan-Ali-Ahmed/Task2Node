      <section class="navBarSection">
            <header class="header flex">
                <div class="logoDiv">
                    <a href="#" class="logo flex">
                    <h1><MdOutlineTravelExplore class="icon">Students</h1>
                    </a>
                </div>
                <div class="navBar">
                    <ul class="navLists flex">
                        <li class="navItem">
                            <a href="/" class="navLink">Info</a>
                        </li>
                        <li class="navItem">
                            <a href="/firstStage" class="navLink">FirstStage</a>
                        </li>
                        <li class="navItem">
                            <a href="/secStage" class="navLink">SecStage</a>
                        </li>
                        <li class="navItem">
                            <a href="/thirdStage" class="navLink">ThirdStage</a>
                        </li>
                        <li class="navItem">
                            <a href="/fourthStage" class="navLink">FourthStage</a>
                        </li>
                       
                       
                        
                       
                    </ul>
                    
                </div>
                
            </header>
        </section>






</body>
</html>